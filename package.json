{
  "name": "denix-ai",
  "displayName": "Denix - AI",
  "description": "AI-powered coding assistant with chat interface",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "media/icon.svg",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "denix-ai-sidebar",
          "title": "Denix - AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "denix-ai-sidebar": [
        {
          "id": "denix-ai-chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "denix-ai.memoriesEditor",
        "displayName": "Denix Memories Editor",
        "selector": [
          {
            "filenamePattern": "**/.denix/memories.md"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "denix-ai.newThread",
        "title": "New Thread",
        "icon": {
          "light": "media/icons/thread.svg",
          "dark": "media/icons/thread.svg"
        }
      },
      {
        "command": "denix-ai.sendMessage",
        "title": "Send Message"
      },
      {
        "command": "denix-ai.attachFile",
        "title": "Attach File"
      },
      {
        "command": "denix-ai.attachImage",
        "title": "Attach Image"
      },
      {
        "command": "denix-ai.toggleAuto",
        "title": "Toggle Auto Mode"
      },
      {
        "command": "denix-ai.changeModel",
        "title": "Change Model"
      },
      {
        "command": "denix-ai.openMemories",
        "title": "Open Memories"
      },
      {
        "command": "denix-ai.openSettings",
        "title": "Open Denix Settings"
      },
      {
        "command": "denix-ai.askQuestion",
        "title": "Quick Ask a Question"
      },
      {
        "command": "denix-ai.enhancePrompt",
        "title": "Enhance Prompt"
      },
      {
        "command": "denix-ai.clearContext",
        "title": "Clear Context Attachments"
      }
    ],
    "keybindings": [
      {
        "command": "denix-ai.openMemories",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "denix-ai.openSettings",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "denix-ai.askQuestion",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "denix-ai.enhancePrompt",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "denix-ai.clearContext",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "editorTextFocus"
      },
      {
        "command": "denix-ai.changeModel",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Denix AI",
      "properties": {
        "denix-ai.openRouterApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenRouter API key. Get one at https://openrouter.ai/keys",
          "markdownDescription": "Your OpenRouter API key. Get one at [openrouter.ai/keys](https://openrouter.ai/keys)"
        },
        "denix-ai.model": {
          "type": "string",
          "default": "anthropic/claude-3.5-sonnet",
          "description": "The AI model to use for chat. Examples: anthropic/claude-3.5-sonnet, openai/gpt-4, mistralai/mistral-7b-instruct",
          "markdownDescription": "The AI model to use for chat. Examples: `anthropic/claude-3.5-sonnet`, `openai/gpt-4`, `mistralai/mistral-7b-instruct`. See [OpenRouter Models](https://openrouter.ai/models) for available models."
        },
        "denix-ai.maxTokens": {
          "type": "number",
          "default": 500,
          "description": "Maximum number of tokens to generate in the AI response. Lower values use fewer credits. Default: 500 (suitable for free tier)",
          "markdownDescription": "Maximum number of tokens to generate in the AI response. Lower values use fewer credits. Default: 500 (suitable for free tier). Increase if you have paid credits."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
